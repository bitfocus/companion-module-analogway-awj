{
	"name": "analogway-awj",
	"version": "2.0.0-0",
	"main": "dist/index.js",
	"scripts": {
		"prepare": "husky install",
		"dev": "yarn build:watch",
		"build": "npx rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint --ext .ts --ext .js --ignore-pattern dist",
		"lint": "yarn lint:raw .",
		"lint-fix": "yarn lint --fix",
		"license-validate": "yarn sofie-licensecheck",
		"postinstall": "yarn build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-analogway-awj.git"
	},
	"author": "Dorian Meid <meid@backstage.org>",
	"license": "MIT",
	"prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"engines": {
		"node": "^18"
	},
	"dependencies": {
		"@companion-module/base": "~1.2.0",
		"@tsconfig/node18": "^1.0.1",
		"dgram": "^1.0.1",
		"superagent": "^8.0.3",
		"urijs": "^1.19.11",
		"ws": "^8.8.1"
	},
	"devDependencies": {
		"@companion-module/tools": "^1.0.2",
		"@types/node": "^18.14.0",
		"@types/superagent": "4.1.16",
		"@types/urijs": "1.19.19",
		"@typescript-eslint/eslint-plugin": "^5.53.0",
		"@typescript-eslint/parser": "^5.53.0",
		"eslint": "^8.34.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.4",
		"lint-staged": "^13.1.2",
		"prettier": "^2.8.4",
		"typescript": "~4.9.5"
	}
}
